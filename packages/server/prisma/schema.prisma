generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

model User {
   id           BigInt   @id
   username     String   @unique
   email        String   @unique
   password     String?
   permissions  Int
   ownedCourses Course[]
}

model Course {
   id       BigInt @id
   name     String @unique
   author   User   @relation(fields: [authorId], references: [id])
   authorId BigInt
   imageUrl String
}
