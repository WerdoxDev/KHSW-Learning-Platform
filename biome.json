{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 150,
		"indentWidth": 3,
		"lineEnding": "crlf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": { "useExhaustiveDependencies": "off" },
			"a11y": { "useKeyWithClickEvents": "off" },
			"nursery": { "useSortedClasses": "info" }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
